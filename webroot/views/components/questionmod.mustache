<h2>Questions</h2>
	<h3 class="mt">{{action}} Question</h3>

	{{msg}}

	<form action="?" method="POST" id="userform">
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<div class="row">

			<div class="col sixteen first">
				<div class="row">
					<label class="mt hmb">Question "Name":</label>
					<div class="col thirteen first">
						<input type="text" name="name" class="hpl" value="{{name}}" required>
					</div>
				</div>


				<div class="row">
					<label class="mt hmb">Explanation Text:</label>
					<div class="col thirteen first">
						<textarea name="txt" class="hpl">{{{txt}}}</textarea>
					</div>
				</div>

				<div class="row">
					<label class="mt hmb">Display Order:</label>
					<div class="col six first">
						<input type="text" name="displayorder" class="hpl" value="{{displayorder}}" required>
					</div>
				</div>

				<div class="row">
					<label class="mt hmb">Status:</label>
					<div class="col six first">
						<select name="status" class="hpl">
							<option value="active"{{statusactive}}>Active</option>
							<option value="inactive"{{statusinactive}}>Inactive</option>
						</select>
					</div>
				</div>

			</div>

		</div>
		<button type="submit" class="dmt">Save</button>
		<a href="/questions" class="button">Cancel</a>
	</form>

<script type='text/javascript' src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.min.js"></script>
<script type='text/javascript' src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/additional-methods.min.js"></script>

<script>
$("#userform").validate();
</script>



